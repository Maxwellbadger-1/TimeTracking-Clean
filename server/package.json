{
  "name": "server",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --ignore node_modules src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "db:reset": "tsx src/scripts/resetDatabase.ts",
    "db:sync": "tsx scripts/sync-db.ts",
    "db:sync:remote": "tsx scripts/sync-db.ts --remote",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:prod": "tsx scripts/migrate.ts prod",
    "migrate:create": "tsx scripts/migrate.ts create",
    "migrate:overtime": "tsx src/scripts/migrateOvertimeToTransactions.ts",
    "sync:worktime": "tsx src/scripts/syncWorkTimeAccounts.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:reset": "tsx scripts/seed.ts --reset",
    "seed:test-users": "tsx src/scripts/seedTestUsers.ts",
    "seed-test-data": "tsx src/scripts/seedTestData.ts",
    "verify-test-data": "tsx src/scripts/verifyTestData.ts",
    "pkg:build": "npm run build && pkg dist/server.js --compress Brotli --targets node20-macos-arm64,node20-macos-x64,node20-win-x64,node20-linux-x64 --output ../desktop/src-tauri/binaries/timetracking-server",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate:overtime": "tsx src/scripts/validateOvertimeCalculation.ts",
    "validate:overtime:detailed": "tsx src/scripts/validateOvertimeDetailed.ts",
    "fill:transactions": "tsx src/scripts/fillAllOvertimeTransactions.ts",
    "validate:all-test-users": "tsx src/scripts/validateAllTestUsers.ts",
    "recalculate:overtime": "tsx src/scripts/recalculateOvertimeBalances.ts",
    "fix:transactions:duplicates": "tsx src/scripts/fixOvertimeTransactionsDuplicates.ts",
    "migrate:new-transaction-system": "tsx src/scripts/migrateToNewTransactionSystem.ts",
    "add:2026-entries": "tsx src/scripts/add2026TimeEntries.ts",
    "add:historical-entries": "tsx src/scripts/addHistoricalTimeEntries.ts",
    "test-users:clean": "tsx src/scripts/cleanTestUsers.ts",
    "test-users:enhanced": "tsx src/scripts/createEnhancedTestUser.ts",
    "test-users:super": "tsx src/scripts/createSuperTestUser.ts",
    "test-users:neuling": "tsx src/scripts/createNewEmployeeTestUser.ts",
    "test-users:full": "npm run test-users:clean && npm run seed:test-users && npm run add:historical-entries && npm run add:2026-entries && npm run recalculate:overtime && npm run validate:all-test-users"
  },
  "pkg": {
    "assets": [
      "node_modules/better-sqlite3/**/*"
    ],
    "scripts": [
      "dist/**/*.js"
    ]
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^4.0.8",
    "@yao-pkg/pkg": "^6.10.1",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.8"
  }
}
