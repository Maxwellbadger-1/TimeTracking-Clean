{
  "name": "server",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --ignore node_modules src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "db:reset": "tsx src/scripts/resetDatabase.ts",
    "pkg:build": "npm run build && pkg dist/server.js --compress Brotli --targets node20-macos-arm64,node20-macos-x64,node20-win-x64,node20-linux-x64 --output ../desktop/src-tauri/binaries/timetracking-server"
  },
  "pkg": {
    "assets": [
      "node_modules/better-sqlite3/**/*"
    ],
    "scripts": [
      "dist/**/*.js"
    ]
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express-session": "^1.18.2",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@yao-pkg/pkg": "^6.10.1",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
