# ============================================
# TimeTracking System - Environment Variables
# ============================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --------------------------------------------
# Server Configuration
# --------------------------------------------

# Server port (default: 3000)
PORT=3000

# Node environment (development | production)
NODE_ENV=development

# --------------------------------------------
# Security (CRITICAL!)
# --------------------------------------------

# Session secret for cookie encryption
# REQUIRED in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# --------------------------------------------
# CORS Configuration
# --------------------------------------------

# Allowed origins (comma-separated)
# Production: Only whitelist trusted origins
# Example: tauri://localhost,https://tauri.localhost,https://yourdomain.com
ALLOWED_ORIGINS=tauri://localhost,https://tauri.localhost

# --------------------------------------------
# Database
# --------------------------------------------

# SQLite database file path (relative to server directory)
DATABASE_PATH=./database.db

# --------------------------------------------
# Logging
# --------------------------------------------

# Log level (debug | info | warn | error)
# Development: debug
# Production: info or warn
LOG_LEVEL=debug

# --------------------------------------------
# Backup Configuration
# --------------------------------------------

# Backup schedule (cron format)
# Default: Daily at 2 AM
BACKUP_SCHEDULE=0 2 * * *

# Backup retention days (default: 30)
BACKUP_RETENTION_DAYS=30

# Backup directory path
BACKUP_DIR=./backups

# --------------------------------------------
# Holidays API (optional)
# --------------------------------------------

# Public holidays API key (if using external service)
# HOLIDAYS_API_KEY=your-api-key-here

# --------------------------------------------
# Rate Limiting (optional overrides)
# --------------------------------------------

# General API rate limit (requests per 15 minutes)
# API_RATE_LIMIT=100

# Login rate limit (attempts per 15 minutes)
# LOGIN_RATE_LIMIT=5

# --------------------------------------------
# Email Notifications (optional - future feature)
# --------------------------------------------

# SMTP configuration for email notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASS=your-smtp-password
# SMTP_FROM=TimeTracking <noreply@example.com>

# --------------------------------------------
# Development Only
# --------------------------------------------

# Disable authentication (development only!)
# NEVER enable in production!
# DISABLE_AUTH=false

# Debug mode (verbose logging)
# DEBUG=false
