{
  "name": "timetracking-system",
  "version": "0.1.0",
  "description": "Modern Multi-User Time Tracking System",
  "private": true,
  "workspaces": [
    "desktop",
    "server"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:desktop": "npm run tauri:dev --workspace=desktop",
    "build:server": "npm run build --workspace=server",
    "build:desktop": "npm run tauri:build --workspace=desktop",
    "build": "npm run build:server && npm run build:desktop",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,rs}\"",
    "test": "npm run test --workspaces",
    "test:desktop": "npm run test --workspace=desktop",
    "test:server": "npm run test --workspace=server",
    "test:run": "npm run test:run --workspaces",
    "test:coverage": "npm run test:coverage --workspaces"
  },
  "devDependencies": {
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "optionalDependencies": {
    "@tauri-apps/cli-darwin-arm64": "^2.9.2",
    "@tauri-apps/cli-darwin-universal": "npm:null@*",
    "@tauri-apps/cli-darwin-x64": "^2.9.2"
  },
  "dependencies": {
    "@tauri-apps/cli": "^2.10.0"
  }
}
